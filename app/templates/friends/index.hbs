<h1>Friends Index</h1>
<h2>Total firends: {{model.length}}</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |friend|}}
            <tr>
                <td>{{friend.id}}</td>
                <td>{{link-to friend.fullName 'friends.show' friend.id}}</td>
                <td><a href="#" {{action "delete" friend}}>Delete</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>